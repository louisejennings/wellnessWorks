<h2>Please enter your Meetup details</h2>

<p> Follow the link to retrieve your key: 
	<a href="https://secure.meetup.com/meetup_api/key/" target="blank">Getting my Meetup API Key</a>
</p>

{{#if user.api_key.length}}	<!-- If api_key is already stored--->

<form method="post" action="/users/api">
	<div class="form-group">
		<label>API Key</label>
		<input type="hidden" id="GetAPI_key" value="12">
		<input type="text" class="form-control" placeholder="{{user.api_key}}" name="api_key">
	</div>
	<button type="submit" class="btn btn-default">Update</button>
</form> 

{{else}} <!-- If no api_key stored for user--->

<form method="post" action="/users/api">
	<div class="form-group">
		<label>API Key</label>
		<input type="text" class="form-control" placeholder="API Key" name="api_key">
	</div>
	<button type="submit" class="btn btn-default">Save</button>
</form> 

{{/if}}
<br>

