{{> navigation}}
{{#if errors}}
	{{#each errors}}
		<div class="alert alert-danger">
			{{msg}}
		</div>
	{{/each}}
{{/if}}
<div class="dashboard">
    <div class="container-fluid">
        <div class="row">
            {{> sideNav}}
            <div id="dashboardContent" class="col-sm-9 col-sm-offset-3 col-md-9 col-md-offset-3 main">
				<h2 class="topHeader">Edit Event</h2>
				<form method="post" action="/events/edit/{{event.id}}">
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" placeholder="Name" name="eventName" value="{{event.eventName}}">
					</div>
					<div class="form-group">
						<label>Date</label>
						<input type="text" class="form-control" placeholder="Date" name="date" value="{{event.date}}">
					</div>
					<div class="form-group">
						<label>Start Time</label>
						<input type="text" class="form-control" placeholder="Start Time" name="startTime" value="{{event.startTime}}">
					</div>
					<div class="form-group">
						<label>End Time</label>
						<input type="text" class="form-control" placeholder="End Time" name="endTime" value="{{event.endTime}}">
					</div>
					<!---<div class="input-group date" data-provide="datepicker">
					    <input type="text" class="form-control" name="endTime">
					    <div class="input-group-addon">
					        <span class="glyphicon glyphicon-th"></span>
					    </div>
					</div>--->
					<!---<div class="form-group">
						<label>Cateogry</label>
						<input type="text" class="form-control" placeholder="Category" name="category" value="{{event.category}}">
					</div>--->
					<div class="form-group">
						<label>Category</label>
						<br>
						<input type="radio" name="category" value="Fitness" 
						{{#equal event.category "Fitness"}} checked="checked"{{/equal}}> Fitness

						<input type="radio" name="category" value="Teamwork" 
						{{#equal event.category "Teamwork"}} checked="checked"{{/equal}}> Teamwork

						<input type="radio" name="category" value="Charity" 
						{{#equal event.category "Charity"}} checked="checked"{{/equal}}> Charity

						<input type="radio" name="category" value="Health" 
						{{#equal event.category "Health"}} checked="checked"{{/equal}}> Health
						<br>
						<input type="radio" name="category" value="Family" 
						{{#equal event.category "Family"}} checked="checked"{{/equal}}> Family

						<input type="radio" name="category" value="Nature" 
						{{#equal event.category "Nature"}} checked="checked"{{/equal}}> Nature

						<input type="radio" name="category" value="Education" 
						{{#equal event.category "Education"}} checked="checked"{{/equal}}> Education
					</div>
					<div class="form-group">
						<label>Location</label>
						<input type="text" class="form-control" placeholder="Location" name="location" value="{{event.location}}">
					</div>
					<div class="form-group">
						<label>Capacity</label>
						<input type="number" class="form-control" placeholder="Capacity" name="capacity" value="{{event.capacity}}">
					</div>
					<div class="form-group">
						<label>Info</label>
						<input type="text" class="form-control" placeholder="Information" name="info" value="{{event.info}}">
					</div>
					<div class="form-group">
						<label>Add Event Image</label>
						<input type="url" class="form-control" placeholder="Photo" name="image" value="{{event.image}}">
					</div>
					<button type="submit" class="btn btn-default">Submit</button>
				</form> 
			</div>
		</div>
    </div>
</div>
{{> footer}}
