{{> headerTitle}}
{{> navigation}}
{{#if success_msg}} <!--check for global variable success_mgs-->
	<div class="alert alert-success">
	  {{success_msg}}
	</div>
{{/if}}
{{#if error_msg}} <!--check for global variable error_msg-->
	<div class="alert alert-danger">
	  {{error_msg}}
	</div>
{{/if}}
{{#if error}} <!--check for global variable error-->
	<div class="alert alert-danger">
	  {{error}}
	</div>
{{/if}}
<div class="loginContainer">
	<form method="post" action="/users/login"> <!--go to routes users /login-->
		<div class="form-group">
			<label>Username</label>
			<input type="text" class="form-control" name="username" placeholder="Username">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password" placeholder="Password">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form> 
</div>