{{> navigation}}
{{#if errors}}
	{{#each errors}}
		<div class="alert alert-danger">
			{{msg}}
		</div>
	{{/each}}
{{/if}}
<div class="dashboard">
    <div class="container-fluid">
        <div class="row">
            {{> sideNav}}
            <div id="dashboardContent" class="col-sm-9 col-sm-offset-3 col-md-9 col-md-offset-3 main">
				<h2 class="topHeader">Create Event</h2>

				<form method="post" action="/events/createEvent">
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" placeholder="Name" name="eventName">
					</div>
					<div class="form-group">
						<label>Date</label>
						<input type="text" class="form-control" placeholder="Date" name="date">
					</div>
					<div class="form-group">
						<label>Start Time</label>
						<input type="text" class="form-control" placeholder="Start Time" name="startTime">
					</div>
					<div class="form-group">
						<label>End Time</label>
						<input type="text" class="form-control" placeholder="End Time" name="endTime">
					</div>
					<div class="form-group">
						<label>Category </label>
							<br>
							<input type="radio" name="category" value="Fitness"> Fitness
   							<input type="radio" name="category" value="Teamwork"> Teamwork
   							<input type="radio" name="category" value="Charity"> Charity
   							<input type="radio" name="category" value="Health"> Health
   							<br>
   							<input type="radio" name="category" value="Family"> Family
   							<input type="radio" name="category" value="Nature"> Nature
   							<input type="radio" name="category" value="Education"> Education
					</div>
					<div class="form-group">
						<label>Location</label>
						<input type="text" class="form-control" placeholder="Location" name="location">
					</div>
					<div class="form-group">
						<label>Capacity</label>
						<input type="number" class="form-control" placeholder="Capacity" name="capacity">
					</div>
					<div class="form-group">
						<label>Info</label>
						<input type="text" class="form-control" placeholder="Information" name="info">
					</div>
					<div class="form-group">
						<label>Add Event Image</label>
						<input type="url" class="form-control" placeholder="Photo" name="image">
					</div>
					<button type="submit" class="btn btn-default">Submit</button>
				</form> 
			</div>
		</div>
    </div>
</div>
{{> footer}}
